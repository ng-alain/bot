{
  "name": "alain-bot",
  "version": "1.0.0",
  "description": "NG-ALAIN Bot is a bot that helps the project by doing all kind of administrative tasks on our PR and issues.",
  "author": "cipchk <cipchk@qq.com>",
  "license": "MIT",
  "repository": "https://github.com/ng-alain/bot.git",
  "homepage": "https://github.com/ng-alain/bot",
  "bugs": "https://github.com/ng-alain/bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "probot run ./lib/index.js",
    "probot-config": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^9.13.0",
    "probot-serverless-now": "^2.1.2",
    "axios": "^0.19.2",
    "string-template": "^1.0.0",
    "kmp": "^0.0.3",
    "@google-cloud/translate": "^6.0.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/string-template": "^1.0.2",
    "jest": "^26.2.2",
    "standard": "^14.3.4",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7",
    "typescript-eslint-parser": "^22.0.0"
  },
  "engines": {
    "node": "12.x"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
